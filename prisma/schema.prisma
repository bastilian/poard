datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Owner {
  id       String @id @default(cuid())
  gitHubId Int?   @unique

  name String @unique

  user   User?   @relation(fields: [userId], references: [id])
  userId String?

  repositories Repository[]

  @@index([name, gitHubId])
}

model User {
  id       String @id @default(cuid())
  gitHubId Int?   @unique

  username String @unique

  pullRequests PullRequest[]
  ownerships   Owner[]

  @@index([username, gitHubId])
}

model Repository {
  id       String @id @default(cuid())
  gitHubId Int?   @unique

  owner   Owner  @relation(fields: [ownerId], references: [id])
  ownerId String

  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  pullRequests PullRequest[]
  branches     Branch[]

  @@index([name, createdAt, updatedAt, gitHubId])
}

model PullRequest {
  id       String @id @default(cuid())
  gitHubId Int?   @unique

  repositoryId String
  repository   Repository @relation(fields: [repositoryId], references: [id])

  authorId String?
  author   User?   @relation(fields: [authorId], references: [id])

  number Int?
  title  String
  body   String?

  createdAt      DateTime  @default(now())
  updatedAt      DateTime?
  closedAt       DateTime?
  mergedAt       DateTime?
  lastActivityAt DateTime?

  @@index([title, gitHubId, createdAt, closedAt, updatedAt])
}

model Branch {
  id       String @id @default(cuid())
  gitHubId Int?   @unique

  repositoryId String
  repository   Repository @relation(fields: [repositoryId], references: [id])

  name String
  sha  String

  commits Commit[]
  @@index([name, sha, gitHubId])
}

model Commit {
  id       String @id @default(cuid())
  gitHubId Int?   @unique

  branchId String
  branch   Branch @relation(fields: [branchId], references: [id])

  sha         String
  subject     String
  description String

  createdAt DateTime

  @@index([sha, subject, gitHubId, createdAt])
}

